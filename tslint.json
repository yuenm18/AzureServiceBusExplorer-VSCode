{
	"rules": {
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true,
		"quotemark": [
			true,
			"single"
		],
		"no-magic-numbers": true,
		"trailing-comma": true,
		"no-var-keyword": true
	},
	"defaultSeverity": "warning",
	"linterOptions": {
		"exclude": [
			"./node_modules/**"
		]
	}
}
